name=libcap-ng
version=0.8.5
release=1
source=(http://people.redhat.com/sgrubb/$name/$name-$version.tar.gz)

build() {
  cd $name-$version
  autoreconf -fiv
  ./configure --prefix=/usr \
		--enable-static=no \
		--with-python3 \
		--without-python

  make
  make check
  make DESTDIR=$PKG install
}
