# Maintainer: Christian Hesse <mail@eworm.de>

name=libxcrypt
version=4.4.36
release=1
source=("https://github.com/besser82/libxcrypt/releases/download/v${version}/${name}-${version}.tar.xz"{,.asc})

build() {
  mkdir build-libxcrypt

  cd "${SRC}/build-libxcrypt/"
  "${SRC}/${name}-${version}"/configure \
    --prefix=/usr \
    --disable-static \
    --enable-hashes=strong,glibc \
    --enable-obsolete-api=no \
    --disable-failure-tokens
  make
  make DESTDIR="${PKG}" install
}
