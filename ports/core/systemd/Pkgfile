# Maintainer: Christian Hesse <mail@eworm.de>
# Maintainer: Dave Reisner <dreisner@archlinux.org>
# Maintainer: Tom Gundersen <teg@jklm.no>

name=systemd
version=255
release=2
source=(https://github.com/systemd/systemd/archive/v$version.tar.gz
	fstab-generator.patch
        '0001-Use-Arch-Linux-device-access-groups.patch'
        'initcpio-hook-udev'
        'initcpio-install-systemd'
        'initcpio-install-udev'
        'thinstation.conf'
        'loader.conf'
        'splash-thinstation.bmp'
        'systemd-user.pam'
        'systemd-hook'
        'systemd-binfmt.hook'
        'systemd-catalog.hook'
        'systemd-daemon-reload.hook'
        'systemd-hwdb.hook'
        'systemd-sysctl.hook'
        'systemd-sysusers.hook'
        'systemd-tmpfiles.hook'
        'systemd-udev-reload.hook'
        'systemd-update.hook'
	quiet.patch \
	quiet2.patch)

build() {

  cd $SRC/systemd-$version
#  patch -p0 -i $SRC/quiet.patch
#  patch -p0 -i $SRC/quiet2.patch
  cd $SRC

  local _timeservers=({0..3}.us.pool.ntp.org)
  local _nameservers=(
    # We use these public name services, ordered by their
    # privacy policy (hopefully):
    #  * Cloudflare (https://1.1.1.1/)
    #  * Quad9 without filtering (https://www.quad9.net/)
    #  * Google (https://developers.google.com/speed/public-dns/)
    1.1.1.1
    9.9.9.10
    8.8.8.8
    2606:4700:4700::1111
    2620:fe::10
    2001:4860:4860::8888
  )

  local _meson_options=(
    -Ddbuspolicydir=/usr/share/dbus-1/system.d
    # TODO(dreisner): consider changing this to unified
    -Ddefault-hierarchy=hybrid
    -Ddefault-kill-user-processes=false
    -Dfallback-hostname='thinstation-linux'
    -Dntp-servers="${_timeservers[*]}"
    -Ddns-servers="${_nameservers[*]}"
    -Drpmmacrosdir=no
    -Dlibiptc=false
    -Dportabled=false
    -Dfirstboot=false
    -Dmicrohttpd=false
    -Dsplit-usr=false
    -Dsplit-bin=false
    -Dldconfig=false
    -Dhibernate=false
    -Denvironment-d=false
    -Dtpm=false
    -Dtpm2=disabled
    -Dbinfmt=false
    -Dcoredump=false
    -Dsysusers=false
    -Dquotacheck=false
    -Dsystem-uid-max=999
    -Dsystem-gid-max=999
    -Ddbuspolicydir=/etc/dbus-1/system.d
    -Dtimesyncd=true
    -Dsysvinit-path=
    -Dsysvrcnd-path=
    -Drfkill=false
    -Dima=false
    -Dsmack=false
    -Dzlib=false
    -Dxz=false
    -Dlz4=false
    -Dbzip2=false
    -Dlibcurl=false
    -Dnss-systemd=false
    -Delfutils=false
    -Drandomseed=false
    -Dbacklight=false
    -Dmachined=false
    -Dnss-mymachines=false
    -Dimportd=false
    -Dhostnamed=true
    -Dtimedated=true
    -Dlocaled=false
    -Dnetworkd=false
    -Dresolve=false
    -Dnss-resolve=false
    -Dxkbcommon=false
    -Ddns-over-tls=false
    -Dtmpfiles=true
    -Dlibcryptsetup=false
    -Dutmp=false
    -Dman=true
    -Dbpf-framework=disabled
    -Dapparmor=disabled
    -Dxenctrl=disabled
    -Dlibcryptsetup-plugins=disabled
    -Dqrencode=disabled
    -Dlibfido2=disabled
    -Dglib=disabled
    -Dhomed=disabled
    -Dremote=disabled
    -Delfutils=disabled
  )

  ts-meson "$name-$version" build "${_meson_options[@]}"

  ninja -C build
  DESTDIR="$PKG" ninja -C build install

  install -d -o root -g systemd-journal -m 2755 "$PKG"/var/log/journal
  install -d -o root -g 102 -m 0750 "$PKG"/usr/share/polkit-1/rules.d

        for efi in usr/lib/systemd/boot/efi/systemd-bootx64.efi; do
		efisign $PKG/$efi "UEFI Signing"
        done
}
