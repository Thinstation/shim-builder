name=libsepol
version=3.6
release=1
source=("https://github.com/SELinuxProject/selinux/releases/download/${version}/${name}-${version}.tar.gz"{,.asc})

build() {
  cd "${name}-${version}"

  export CFLAGS="${CFLAGS} -fno-semantic-interposition"
  make
  make DESTDIR="${PKG}" SHLIBDIR=/usr/lib install
}
