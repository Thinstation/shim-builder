name=rdiscount
version=2.2.7.3
release=1
source=(http://rubygems.org/downloads/$name-${version}.gem)
lastman=markdown.7

build() {
	local _gemdir="$(ruby -e'puts Gem.default_dir')"
	mkdir -p $PKG/usr/bin
	cd $SRC
  	gem install --ignore-dependencies -i "$PKG$_gemdir" $name-$version.gem \
  		-n "$PKG/usr/bin"

}
